{
  "$schema": "https://json.schemastore.org/prettierrc",
  "tabWidth": 2,
  "trailingComma": "none",
  "vueIndentScriptAndStyle": true,
  "singleQuote": true,
  "semi": false,
  "plugins": [
    "@trivago/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ],
  "importOrder": [
    "^vue(.*)$",
    "<THIRD_PARTY_MODULES>",
    "^@/components/(.*)$",
    "^@/composables/(.*)$",
    "^@/stores/(.*)$",
    "^@/schema/(.*)$",
    "^@/types/(.*)$",
    "^@/utililities/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
